<%= render 'pages/home' unless user_signed_in? %>

<div id="posts" class="transitions-enabled">
  <% @posts.each do |post| %>
    <div id="post-box" class="box panel panel-default">
      
      <div class="panel-heading">
        <div class="panel-title">
          <strong><%= post.title %></strong>
        </div>
      </div>
      
      <div class="panel-body">
        <%= link_to image_tag(post.image.url(:medium)), "#myModal#{post.id}", "data-toggle" => "modal" %><hr>
        <p><strong><%= link_to post.user.name, post.user if post.user.name %></strong></p>
        <p><%= truncate(post.description, :length => 80) %></p>
        <p><strong>Price:</strong> Â£ <%= post.price %></p>
      </div>
      
      <% if user_signed_in? %>
          <div class="panel-footer">
            <% if post.user == current_user %>
              <%= link_to edit_post_path(post) do %>
                <span class="glyphicon glyphicon-edit"></span>
                  Edit
              <% end %>
              <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }  do %>
                <span class="glyphicon glyphicon-trash"></span>
                  Delete
              <% end %>
            <% end %>
          </div>
      <% end %>

    </div>
  <% end %>
</div>

<div class="center">
   <%= will_paginate @collection, renderer: BootstrapPagination::Rails %>
</div>

<%= render 'modal' %>