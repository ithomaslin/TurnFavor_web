<% @posts.each do |post| %>
  <div class="modal fade" id="myModal<%= post.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel"><%= post.title %></h4>
        </div>
        <div class="modal-body">
          <div class="center">
            <%= link_to image_tag(post.image.url(:medium)), post %>
          </div>
          <hr>
          <p><strong><%= link_to post.user.name, post.user if post.user.name %></strong></p>
          <p><%= post.description %></p>
          <p><strong>Price:</strong> Â£ <%= post.price %></p>
          <% if post.user == current_user %>
            <%= link_to edit_post_path(post) do %>
              <span class="glyphicon glyphicon-edit"></span>
                Edit
            <% end %>
            <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }  do %>
              <span class="glyphicon glyphicon-trash"></span>
                Delete
            <% end %>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary">Buy</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% end %>